{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ES2021", "DOM"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}